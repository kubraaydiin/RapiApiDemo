@model List<ImdbMovieViewModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IMDb Top 100 Films</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 40px 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            max-width: 1400px;
        }

        .page-header {
            text-align: center;
            margin-bottom: 40px;
            color: white;
        }

            .page-header h1 {
                font-size: 3rem;
                font-weight: 700;
                margin-bottom: 10px;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            }

            .page-header p {
                font-size: 1.2rem;
                opacity: 0.9;
            }

        .movie-table-wrapper {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
        }

        .table {
            margin: 0;
        }

            .table thead {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
            }

                .table thead th {
                    border: none;
                    padding: 20px 15px;
                    font-weight: 600;
                    text-transform: uppercase;
                    letter-spacing: 1px;
                    font-size: 0.85rem;
                    vertical-align: middle;
                }

            .table tbody tr {
                transition: all 0.3s ease;
                border-bottom: 1px solid #f0f0f0;
            }

                .table tbody tr:hover {
                    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
                    transform: scale(1.01);
                    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
                }

            .table tbody td {
                padding: 20px 15px;
                vertical-align: middle;
                border: none;
            }

        .rank-badge {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            font-weight: 700;
            font-size: 1.1rem;
            box-shadow: 0 4px 10px rgba(102, 126, 234, 0.4);
        }

            .rank-badge.top-3 {
                background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
                box-shadow: 0 4px 10px rgba(245, 87, 108, 0.4);
            }

        .movie-title {
            font-weight: 600;
            font-size: 1.1rem;
            color: #2d3748;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .movie-title i {
                color: #667eea;
                font-size: 1.3rem;
            }

        .movie-poster {
            position: relative;
            width: 100px;
            height: 140px;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
            transition: all 0.3s ease;
        }

            .movie-poster:hover {
                transform: scale(1.1) rotate(2deg);
                box-shadow: 0 12px 30px rgba(0,0,0,0.3);
            }

            .movie-poster img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .rating-box {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            background: linear-gradient(135deg, #ffd89b 0%, #ffb347 100%);
            padding: 10px 20px;
            border-radius: 30px;
            font-weight: 700;
            font-size: 1.1rem;
            color: #2d3748;
            box-shadow: 0 4px 10px rgba(255, 179, 71, 0.3);
        }

            .rating-box i {
                color: #f5a623;
                font-size: 1.2rem;
            }

        .imdb-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 12px 24px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 30px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(102, 126, 234, 0.3);
        }

            .imdb-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(102, 126, 234, 0.5);
                color: white;
                background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            }

            .imdb-btn i {
                font-size: 1.1rem;
            }

        @@media (max-width: 768px) {
            .page-header h1 {
                font-size: 2rem;
            }

            .table {
                font-size: 0.85rem;
            }

            .movie-poster {
                width: 70px;
                height: 100px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="page-header">
            <h1><i class="fas fa-trophy"></i> Tüm Zamanların En İyi 100 Filmi</h1>
            <p>IMDb'ye göre en yüksek puanlı filmler</p>
        </div>

        <div class="movie-table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th><i class="fas fa-hashtag"></i> Sıra</th>
                        <th><i class="fas fa-film"></i> Film Adı</th>
                        <th><i class="fas fa-image"></i> Poster</th>
                        <th><i class="fas fa-star"></i> Puan</th>
                        <th><i class="fas fa-link"></i> İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="rank-badge @(item.rank <= 3 ? "top-3" : "")">
                                    @item.rank
                                </span>
                            </td>
                            <td>
                                <div class="movie-title">
                                    <i class="fas fa-clapperboard"></i>
                                    @item.title
                                </div>
                            </td>
                            <td>
                                <div class="movie-poster">
                                    <img src="@item.big_image" alt="@item.title" />
                                </div>
                            </td>
                            <td>
                                <div class="rating-box">
                                    <i class="fas fa-star"></i>
                                    @item.rating
                                </div>
                            </td>
                            <td>
                                <a href="@item.imdb_link" class="imdb-btn" target="_blank">
                                    <i class="fab fa-imdb"></i>
                                    IMDb'de İzle
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>